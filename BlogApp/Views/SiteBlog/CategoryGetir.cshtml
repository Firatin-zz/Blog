@model List<BlogApp.Models.ORM.Entity.BlogPost>
@{
    ViewBag.Title = "CategoryGetir";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
@foreach (var item in Model)
{
    <section class="about_area">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="about_main">
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div class="doing_what">
                                    <h2>@item.Title</h2>
                                    <p>
                                        @if (@item.Content.Length > 400)
                                        {
                                            Write(Html.Raw(item.Content.Substring(0, 400) + "..."));
                                        }
                                        else
                                        {
                                            Write(Html.Raw(item.Content));
                                        }
                                    </p>
                                    <div class="read_more_about">
                                        @*<a href="">Contact Us</a>*@
                                        <a href="/Blog/@BlogApp.Models.UrlNav.helper.ToSlug(item.Title)/@item.ID">Detay</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div class="about_slider">
                                    <div class="carousel slide">
                                        <!-- Wrapper for slides -->
                                        <div class="carousel">
                                            <div class="item">
                                                <img alt="@item.Title,Sevgi Yilmaz, iş hukuku, ceza hukuku, ticaret hukuku, gayrimenkul hukuku, icra, icra hukuku, danıştay kararları, yargıtay kararları" src="~/Areas/Admin/Content/img/BlogPost/@item.ImagePath" width="520" height="210">
                                            </div>
                                        </div>
                                        <!-- Controls -->
                                    </div>
                                </div>
                            </div>
                        </div><hr />
                    </div>
                </div>
            </div>
        </div>
    </section>
}
