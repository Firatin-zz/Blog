
@{
    ViewBag.Title = "AddSiteMenu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<section class="content-header">
    <h1>
        Menu Ekleme
        <small>Preview</small>
    </h1>
</section>
<section>
    <div class="row">
        <div class="col-md-9">
            @Html.Partial("/Areas/Admin/Views/Shared/Partial/FormMessagesPart.cshtml")
            <div class="box box-primary">
                <div class="box-body">
                    <form action="/Admin/SiteMenu/AddSiteMenu/" method="post">

                        <div class="form-group">
                            <label>Ad</label>
                            <input type="text" name="Name" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>URL</label>
                            <input type="text" name="Url" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>Css Class</label>
                            <input type="text" name="cssClass" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Gonder" class="btn btn-primary" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>