@model BlogApp.Areas.Admin.Models.HakkimdaVM

@{
    ViewBag.Title = "UpdateHakkimda";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<section class="content-header">
    <h1>
        Blog Yazısı Güncelleme
        <small>Preview</small>
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-10">
            @Html.Partial("/Areas/Admin/Views/Shared/Partial/FormMessagesPart.cshtml")
            <script src="~/scripts/ckeditor/ckeditor.js"></script>
            <div class="box box-primary">
                <div class="box-header with-border">
                </div>
                @using (Html.BeginForm("UpdateHakkimda", "Hakkimda", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    <div class="box-body">
                        <div class="form-group">
                            @Html.LabelFor(x => x.Title, "Başlık", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(x => x.Title, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Bilgilerim, "Bilgi", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(x => x.Bilgilerim, new { @class = "ckeditor" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.PostImage, "Resim", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <input type="file" name="PostImage" />
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Adres, "Adres", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(x => x.Adres, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Telefon, "Telefon", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(x => x.Telefon, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Email, "E Mail", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>

                }
            </div>
        </div>
    </div>
</section>