@model BlogApp.Areas.Admin.Models.CategoryVM
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Quick Example</h3>
    </div>
    @using (Html.BeginForm())
    {
        <div class="box-body">
            <div class="form-group">
                <label for="exampleInputPassword1">Kategori Adı</label>                
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Kategori Adı" })
                @Html.ValidationMessageFor(x => x.Name)
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Kategori Açıklaması</label>
                @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "Açıklama" })
                @Html.ValidationMessageFor(x => x.Description)
            </div>
        </div>
                        <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
    }
</div>

